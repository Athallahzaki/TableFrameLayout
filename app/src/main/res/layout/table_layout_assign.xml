<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:ignore="HardcodedText">

    <TableRow android:background="#22ff">
        <TextView
            android:layout_column="1"
            android:text="Open..."
            android:padding="3dp" />
        <TextView
            android:text="Ctrl+O"
            android:gravity="end"
            android:padding="3dp" />
    </TableRow>

    <TableRow android:background="#22ff">
        <TextView
            android:layout_column="1"
            android:text="Save..."
            android:padding="3dp" />
        <TextView
            android:text="Ctrl+S"
            android:gravity="end"
            android:padding="3dp" />
    </TableRow>

    <TableRow android:background="#22ff">
        <TextView
            android:layout_column="1"
            android:text="Save As..."
            android:padding="3dp" />
        <TextView
            android:text="Ctrl+Shift+S"
            android:gravity="end"
            android:padding="3dp" />
    </TableRow>

    <View
        android:layout_height="2dp"
        android:background="#ff9090" />

    <TableRow android:background="#ffff00">
        <TextView
            android:text="x"
            android:padding="3dp" />
        <TextView
            android:text="Import..."
            android:padding="3dp" />
    </TableRow>
    <TableRow android:background="#ffff00">
        <TextView
            android:text="x"
            android:padding="3dp" />
        <TextView
            android:text="Export..."
            android:padding="3dp" />
        <TextView
            android:text="Ctrl+E"
            android:gravity="end"
            android:padding="3dp" />
    </TableRow>

    <View
        android:layout_height="2dp"
        android:background="#ff9090" />

    <TableRow android:background="#aaf">
        <TextView
            android:layout_column="1"
            android:text="Quit"
            android:padding="3dp" />
    </TableRow>
</TableLayout>